<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <!-- Adding a mail icon in systray.-->
    <t t-name="whatsapp_mail_messaging.mail_icon" owl="1">
        <div class="o-dropdown dropdown o_mail_icon o-dropdown--no-caret">
            <label class="dropdown-toggle o-dropdown--narrow" t-on-click="onclick_mail_icon" tabindex="0" aria-expanded="false" title="Send a Message Through Mail">
                <i class="fa fa-envelope" id="fa-icon"/>
            </label>
        </div>
    </t>
</templates>
